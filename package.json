{
  "name": "@bosonprotocol/chat-sdk",
  "version": "1.3.1-alpha.16",
  "description": "Extension of @xmtp/xmtp-js with support for chat threads and further message types.",
  "main": "dist/browser/index.js",
  "module": "dist/browser/index.js",
  "types": "dist/browser/index.d.ts",
  "type": "module",
  "bin": {
    "boson-xmtp-mcp-server": "dist/cjs/mcp/server/index.js"
  },
  "scripts": {
    "postinstall": "npx playwright install",
    "build": "rimraf dist && tsc --build tsconfig.json",
    "watch": "rimraf dist && tsc --watch",
    "clean": "rimraf dist coverage node_modules",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "test": "npm run test:all",
    "test:all": "npx vitest --config vite.config.mts",
    "test:unit": "npx vitest tests/unit --config vite.config.mts",
    "test:integration": "npx vitest tests/integration --config vite.config.mts",
    "dev:mcp-server:stdio": "node --watch dist/mcp/server/index.js | npx @modelcontextprotocol/inspector --config mcpServer.json --server xmtp-mcp-dev-stdio-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bosonprotocol/chat-sdk.git"
  },
  "author": "Boson Protocol",
  "license": "Apache-2.0",
  "files": [
    "dist/*",
    "src/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@bosonprotocol/common": "^1.31.0-alpha.11",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@vitest/browser": "^3.1.1",
    "@xmtp/browser-sdk": "^2.0.5",
    "@xmtp/node-sdk": "^4.1.0",
    "babel-plugin-transform-import-meta": "^2.3.2",
    "ethers": "^5.7.2",
    "playwright": "^1.51.1",
    "valid-data-url": "^4.0.1",
    "viem": "^2.26.5",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "yup": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.1",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vitest/web-worker": "^3.1.2",
    "babel-jest": "^29.7.0",
    "buffer": "^6.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "events": "^3.3.0",
    "happy-dom": "^17.4.4",
    "jest": "^29.3.1",
    "prettier": "^3.6.2",
    "rimraf": "^3.0.2",
    "stream-browserify": "^3.0.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.0",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "volta": {
    "node": "20.19.0",
    "npm": "8.11.0"
  }
}
